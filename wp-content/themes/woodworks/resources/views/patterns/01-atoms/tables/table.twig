{% if table %}
  <table class="o-table{{ table.classes ? ' ' ~ table.classes }}">
    {% if table.heading.rows %}
      <thead>
        {% for row in table.heading.rows %}
          <tr>
            {% for cell in row.cells %}
              <th class="o-table__heading-cell" {% if cell.colspan %}colspan="{{ cell.colspan }}"{% endif %}>{{ cell.text }}</th>
            {% endfor %}
          </tr>
        {% endfor %}
      </thead>
    {% endif %}

    {% if table.body %}
      <tbody>
        {% for row in table.body.rows %}
          <tr>
            {% for cell in row.cells %}
              <td class="o-table__cell"{% if cell.colspan %}colspan="{{ cell.colspan }}"{% endif %}>{{ cell.text }}</td>
            {% endfor %}
          </tr>
        {% endfor %}
      </tbody>
    {% endif %}

    {% if table.footer %}
      <tfoot>
        {% for row in table.footer.rows %}
          <tr>
            {% for cell in row.cells %}
              <th class="o-table__footer-cell" {% if cell.colspan %}colspan="{{ cell.colspan }}"{% endif %}>{{ cell.text }}</th>
            {% endfor %}
          </tr>
        {% endfor %}
      </tfoot>
    {% endif %}
  </table>
{% endif %}
