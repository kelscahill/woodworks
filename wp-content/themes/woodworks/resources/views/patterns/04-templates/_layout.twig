<!DOCTYPE html>
<html {{ site.language_attributes }}>
  {% include "@templates/_head.twig" %}
  <body class="l-body {{ body_class }}{{ body.classes ? ' ' ~ body.classes }}" data-template="base.twig">
    <a class="skip-link screen-reader-text visually-hidden" href="#content">Skip to content</a>
    {% include "@organisms/global/header/header.twig" %}
    {% block sections_before %}{% endblock %}
    <main role="document" class="l-main{{ main.classes ? ' ' ~ main.classes }}">
      {% block content %}{% endblock %}
      {% block sidebar %}{% endblock %}
    </main>
    {% block sections_after %}{% endblock %}
    {% include "@organisms/global/footer/footer.twig" %}
    {{ function('wp_footer') }}
  </body>
</html>
