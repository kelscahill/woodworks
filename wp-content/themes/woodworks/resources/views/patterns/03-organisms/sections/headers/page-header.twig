{% if page_header %}
  <div class="c-page-header{{ page_header.classes ? ' ' ~ page_header.classes }}">
    <div class="c-page-header__container l-container u-spacing">
      {% include "@atoms/text/kicker/kicker.twig" with {
        "kicker": {
          "text": page_header.kicker,
          "classes": "c-page-header__kicker"
        }
      } %}
      {% include "@atoms/text/heading/heading.twig" with {
        "heading": {
          "level": "1",
          "size": "xl",
          "text": page_header.title,
          "classes": "c-page-header__title"
        }
      } %}
      {% include "@atoms/text/dek/dek.twig" with {
        "dek": {
          "text": page_header.dek,
          "classes": "c-page-header__dek"
        }
      } %}
    </div>
  </div>
{% endif %}