{% if hero %}
  <section class="c-hero{{ hero.classes ? ' ' ~ hero.classes }} l-wrap">
    <div class="c-hero__container l-container" data-bp="grid 6@md">
      <div class="c-hero__content u-spacing">
        <div class="c-hero__heading u-spacing--half">
          {% include "@atoms/text/kicker/kicker.twig" with {
            "kicker": {
              "text": hero.kicker,
              "extra": "o-hero__kicker"
            }
          } %}
          {% include "@atoms/text/heading/heading.twig" with {
            "heading": {
              "level": "1",
              "size": "xxl",
              "text": hero.heading,
              "extra": "o-hero__title"
            }
          } %}
        </div>
        {% include "@atoms/text/dek/dek.twig" with {
          "dek": {
            "text": hero.dek,
            "extra": "o-hero__dek"
          }
        } %}
        {% include "@atoms/buttons/button.twig" with {
          "button": {
            "url": hero.button.url,
            "text": hero.button.title,
            "target": hero.button.target,
            "extra": "o-hero__button"
          }
        } %}
      </div>
      {% if Image(hero.image).src %}
        <div class="c-hero__image">
          {% include "@atoms/images/image/responsive-image.twig" with {
            "image": {
              "srcset": Image(hero.image).srcset,
              "src": Image(hero.image).src,
              "alt": Image(hero.image).alt
            }
          } %}
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}